<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp">

    <Button
        android:id="@+id/clear"
        android:gravity="start|center"
        android:padding="@dimen/main_bar_marg"
        android:layout_marginEnd="@dimen/main_bar_marg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_icon"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:text="@string/main_button_clear"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/main_text_small" />

    <Button
        android:id="@+id/button_camera"
        android:maxLines="1"
        android:maxLength="30"
        android:layout_width="@dimen/main_icon"
        android:layout_height="@dimen/main_icon"
        android:layout_toStartOf="@+id/button_hear"
        android:background="@drawable/ic_camera_black_24dp"
        android:padding="@dimen/main_bar_marg"
        android:text="" />

    <Button
        android:id="@+id/button_hear"
        android:layout_width="@dimen/main_icon"
        android:layout_height="@dimen/main_icon"
        android:layout_marginStart="@dimen/main_icon_marg"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_record_voice_over_black_24dp"
        android:padding="@dimen/main_bar_marg"
        android:text="" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_update"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/button_translate"
            android:layout_gravity="start"
            android:layout_width="@dimen/main_icon"
            android:layout_height="@dimen/main_icon"
            android:background="@drawable/ic_translate_black_24dp"
            android:padding="@dimen/main_bar_marg"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spin_lang_2"
            style="@style/spinner_no_arrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/main_drawer_indic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_brightness_1_black_24dp" />

            <Button
                android:id="@+id/button_swap"
                android:layout_width="@dimen/main_icon"
                android:layout_height="@dimen/main_icon"
                android:layout_marginBottom="@dimen/main_bar_marg"
                android:layout_marginTop="@dimen/main_bar_marg"
                android:background="@drawable/ic_swap_vert_black_24dp"
                android:padding="@dimen/main_bar_marg"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_say"
        android:layout_width="@dimen/main_icon"
        android:layout_height="@dimen/main_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_speaker_phone_black_24dp"
        android:padding="@dimen/main_bar_marg"
        android:text="" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <Spinner
            android:id="@+id/spin_lang_1"
            style="@style/spinner_no_arrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_icon"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</RelativeLayout>